@model Pizzashop.DAL.ViewModels.CustomerDetailsForTableviewmodel

<form id="TableAssignForm" class="d-flex flex-column gap-3">
           <input type="hidden" asp-for="@Model.Id">
           <input type="hidden" asp-for="@Model.customerId">
            <div class="form-floating">
                <input type="email"  class="form-control EmailId" id="CustomerEmail" placeholder="name@example.com" asp-for="@Model.Email">
                <label for="floatingInput">Email </label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="floatingPassword" placeholder="Name" asp-for="@Model.Name">
                <label for="floatingPassword">Name</label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="Number" maxlength="10" class="form-control" id="floatingPassword" placeholder="Mobile No." asp-for="@Model.Phone">
                <label for="floatingPassword">Mobile</label>
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>

             <div class="d-flex justify-content-between gap-0 row">
                <div class="col">
                    <div class="form-floating ">
                    <input type="text" class="form-control" id="ItemRateForAdd" placeholder="No. Of Person" asp-for = "@Model.NoOfPerson" >
                    <label for="ItemRateForAdd">No. Of Person</label>
                    <span asp-validation-for="@Model.NoOfPerson" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                    <select class="form-select" id="sectionwaitingtoken" asp-for="@Model.sectionId">
                    <option selected value="">Select Section</option>
                     @foreach (var c in Model.sections)
                    {                
                        <option value="@c.Sectionid">@c.SectionName</option>     
                    }
                </select>
                <label for="SectionId">Section</label>
                    </div>
                    
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                 <button type="submit" id="assign-table" class="btn custom-btn-bg text-white" style="background-color: #0066bb;" >Assign
            </button>
            <button type="button" class="btn custom-blue-border" style="border:2px solid #0066bb; color: #0066bb;" >Cancel</button>
            </div>
           
</form>