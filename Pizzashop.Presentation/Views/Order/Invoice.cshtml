        .order-table td {
            @* @ border: 1px solid #ddd; @ *@
            padding: 8px;
            text-align: left;
        }

        .order-table th {
           
            font-weight: bold;
        }

        .order-table td {
            vertical-align: top;
        }

        .order-table .text-center {
            text-align: center;
        }

        .summary {
