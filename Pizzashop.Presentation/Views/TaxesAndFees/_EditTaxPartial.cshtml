@model Pizzashop.DAL.ViewModels.EditTaxviewmodel

<div class="modal-header border-0">
                <h5 class="modal-title fw-bolder">Edit Tax</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="EditTax" asp-controller="TaxesAndFees" method="post" id="taxSaveForm">
                <div class="modal-body">
                    <input type="text" asp-for ="@Model.TaxId" hidden>
                    <div class="mb-3">
                        <div class="form-floating">
                            <input type="text" class="form-control" asp-for = "@Model.TaxName" id="taxName" placeholder="Enter tax name" required>
                            <label for="taxName">Name</label>
                        </div>
                    </div>
                    <div class="row" >  
                    <div class="col-6 mb-3">
                        <div class="form-floating">
                            <select class="form-select" id="statusSelect" asp-for = "@Model.TaxType" aria-label="Tax Type" required>
                                <option value=""  selected>Tax Type</option>
                                <option value="true">Percentage</option>
                                <option value="false">Flat</option>
                            </select>
                            <label for="statusSelect">Type</label>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="form-floating">
                            <input type="number" class="form-control" id="taxAmount" asp-for = "@Model.TaxValue" placeholder="Enter tax amount" required>
                            <label for="taxAmount">Tax Amount</label>
                        </div>
                    </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6 d-flex align-items-center">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for = "@Model.IsActive" id="availableTax">
                            </div>
                            <label class="form-check-label " for="availableTax">Available</label>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for = "@Model.IsDefault" id="defaultTax">
                            </div>
                            <label class="form-check-label " for="defaultTax">Default Tax</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit"class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>