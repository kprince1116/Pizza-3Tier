  <script>
    let selectedModifiers = [];

    function getModifierItemAjax(modifierGroupId) {
      $.ajax({
        url: '@Url.Action("GetModifierItemById", "Menu")',
        type: "GET",
        dataType: 'html',
        data: { modifierGroupId: modifierGroupId },
        success: function (data) {
          console.log("data", data);
          $("#mgItemList").append(data);
          },
        error: function () {
          console.log("Error Appending Data");
        }
      });
    }

    $(document).on("change", ".MinAllowed", function () {
      let id = $(this).data("mgitemid");
      let minValue = parseInt($(this).val());
      let maxDropdown = $(this).closest(".selectedModifierGroup").find(".MaxAllowed");
      let maxvalue = $(".MaxAllowed[data-mgitemid='" + id + "']").val();
      let itemCount = parseInt($(this).data("total"));

      maxDropdown.empty();
      for (let i = minValue; i <= itemCount; i++) {
        if (i == maxvalue) {
          maxDropdown.append(`<option selected value="${i}">${i}</option>`);
        }
        else {
          maxDropdown.append(`<option value="${i}">${i}</option>`);
        }
      }
    });

    $(document).on("change", ".MaxAllowed", function () {
      let id = $(this).data("mgitemid");
      let maxValue = parseInt($(this).val());
      console.log("maxvalue", maxValue);
      console.log($(".MinAllowed[data-mgitemid='" + id + "']"));
      let value = $(".MinAllowed[data-mgitemid='" + id + "']").val();
      console.log("value", value);
      let minDropdown = $(this).closest(".selectedModifierGroup").find(".MinAllowed");

      minDropdown.empty();
      for (let i = 0; i <= maxValue; i++) {
        if (i == value) {
          minDropdown.append(`<option selected value="${i}">${i}</option>`);
        }
        else {
          minDropdown.append(`<option value="${i}">${i}</option>`);
        }
      }
    });




    $(document).on("change", "#selectModifiers", function () {
      var modifierGroupId = Number($(this).val());

      // Check using includes() since it's an array of numbers now
      if (!selectedModifiers.includes(modifierGroupId)) {
        selectedModifiers.push(modifierGroupId);
        getModifierItemAjax(modifierGroupId);
      }
      console.log(selectedModifiers);

      $("#selectModifiers").val("-2");
    });

    // Remove Modifier Group
    $(document).on("click", ".removeModifierGroup", function () {
      let removeModifierGroupID = Number($(this).data("mgitemid"));
      selectedModifiers = selectedModifiers.filter(function (id) {
        return id !== removeModifierGroupID;
      });
      $("div").remove(".selectedModifierGroup[data-mgitemid='" + removeModifierGroupID + "']");
    });
